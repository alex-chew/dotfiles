[alias]
    s = status
    au = add -u
    ap = add -p
    br = branch
    cm = commit
    cma = commit --amend
    co = checkout
    cob = checkout -b
    logo = log --oneline
    logg = log --oneline --graph --decorate
    df = diff
    dfw = diff --word-diff=color
    dfc = diff --cached

[core]
    excludesfile = ~/.gitignore_global

