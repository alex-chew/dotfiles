#!/usr/bin/env bash

info=$(amixer -D pulse get Master)
regex="\[([0-9]+)%\] \[(on|off)\]"

# get fields
[[ $info =~ $regex ]]
vol=${BASH_REMATCH[1]}
status=${BASH_REMATCH[2]}

# full text
echo "$vol"

# short text
echo

# color
if [[ "$status" == "off" ]]; then
  echo "{{ i3.fg_inactive }}"
else
  echo "{{ i3.fg }}"
fi

