[alias]
    s = status
    au = add -u
    ap = add -p
    br = branch
    cm = commit
    cma = commit --amend
    co = checkout
    cob = checkout -b
    lg = log --graph --pretty='%C(auto)%h %C(bold)%s%C(auto,reset) %C(green)(%ar)%C(auto)%d'
    lf = log --graph --pretty='%C(auto)%h %C(bold)%s%C(auto)%d%n        %C(green)%aD%C(auto,reset) %C(blue)(%an)'
    df = diff
    dfw = diff --word-diff=color
    dc = diff --cached
    dcw = diff --cached --word-diff=color

[core]
    excludesfile = ~/.gitignore_global

[user]
    name = Alex Chew
    email = alex@alexchew.net

[push]
    default = simple

[include]
    # guyzmo/git-repo
    path = ~/.gitconfig-repos
