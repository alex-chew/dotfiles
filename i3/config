client.placeholder      #000000 #0c0c0c #ffffff #000000



exec --no-startup-id nitrogen --restore
exec --no-startup-id compton -i 0.6 -I 0.05 -b --mark-ovredir-focused --focus-exclude 'FORCE_OPAQUE:s'
exec --no-startup-id nm-applet


bindsym $mod+Escape exec --no-startup-id i3lock -d -I 10 -c 2b303b -e



exec --no-startup-id xrdb -load ~/.Xresources

