font pango:Roboto Mono 11
set $mod Mod4
focus_on_window_activation urgent



# i3 control

# reload the configuration file
bindsym $mod+Shift+F5 reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+F6 restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+Escape exec \
    "i3-nagbar -t warning -m 'Exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"

# Debugging
bindsym $mod+apostrophe exec --no-startup-id ~/.scripts/sysdebug.sh



# Power control
set $power power [exit | suspend | hibernate]
mode "$power" {
        bindsym e exec --no-startup-id i3-msg exit; mode "default"
        bindsym s exec --no-startup-id "~/.i3/bin/lock; systemctl suspend"; mode "default"
        # bindsym h exec --no-startup-id "~/.i3/bin/lock; systemctl hibernate"; mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$power"



# Keyboard

exec_always --no-startup-id setxkbmap -model pc105 -layout us -option compose:ralt -option caps:escape

# switch input method
bindsym $mod+z exec --no-startup-id ~/.i3/bin/ibus-switch-engine

# keyboard backlight control
bindsym XF86KbdBrightnessDown exec --no-startup-id ~/.scripts/kb-backlight decrease
bindsym XF86KbdBrightnessUp   exec --no-startup-id ~/.scripts/kb-backlight increase



# Screen

exec_always --no-startup-id xset s 1800 1800
exec_always --no-startup-id xset dpms 1800 1800 1800

exec --no-startup-id autorandr --change
# refresh xrandr configuration
bindsym $mod+Shift+Mod1+F6 exec --no-startup-id autorandr --change

# monitor backlight control
bindsym Shift+XF86KbdBrightnessDown exec --no-startup-id xbacklight -dec 10
bindsym Shift+XF86KbdBrightnessUp   exec --no-startup-id xbacklight -inc 10

# wallpaper
set $wall ~/Pictures/backgrounds/wall.png
exec_always --no-startup-id "sleep 1; feh --bg-center $wall"

# i3lock
bindsym $mod+Escape exec --no-startup-id ~/.i3/bin/lock



# Mouse and touchpad

exec_always --no-startup-id xset m 0
exec_always --no-startup-id synclient \
    MinSpeed=1 MaxSpeed=1 AccelFactor=1 \
    TapButton3=2 \
    PalmDetect=1 \
    HorizTwoFingerScroll=1



# Window manipulation

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# splits
bindsym $mod+c split h
bindsym $mod+v split v

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+q layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# focus the parent/child
bindsym $mod+a focus parent
bindsym $mod+s focus child

# kill focused window
bindsym $mod+Shift+q kill

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"



# Window appearance

# misc rules
for_window [class="^.*"] border pixel 4
for_window [class="^Octave$"] floating enable
for_window [class="^Tk$" title="^Figure"] floating enable
for_window [title="^cliped$"] floating enable
for_window [instance="sun-awt-X11-XFramePeer"] floating enable

# colors
# class                 border  bg      text    indicator
client.focused          #4c7899 #65737e #ffffff #65737e
client.focused_inactive #333333 #343d46 #ffffff #343d46
client.unfocused        #333333 #343d46 #888888 #343d46
client.urgent           #2f343a #bf616a #ffffff #bf616a
client.placeholder      #000000 #0c0c0c #ffffff #000000

# gaps
set $gaps_inner 12
smart_borders no_gaps
gaps inner $gaps_inner
gaps outer 0
bindsym $mod+g       gaps inner current set $gaps_inner
bindsym $mod+Shift+g gaps inner current set 0



# Window modes

# fullscreen
bindsym $mod+f fullscreen

# scratchpad
bindsym $mod+Shift+p move scratchpad
bindsym $mod+p scratchpad show

# sticky
bindsym $mod+i floating toggle; sticky toggle

# floating
floating_modifier $mod
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle



# Workspaces

set $w1 1
set $w2 2
set $w3 3
set $w4 4
set $w5 5
set $w6 6
set $w7 7
set $w8 8
set $w9 9
set $w0 10:0
set $wE 11:
set $wC 12:
set $wP 13:

# switch to workspace
bindsym $mod+1                 workspace $w1
bindsym $mod+2                 workspace $w2
bindsym $mod+3                 workspace $w3
bindsym $mod+4                 workspace $w4
bindsym $mod+5                 workspace $w5
bindsym $mod+6                 workspace $w6
bindsym $mod+7                 workspace $w7
bindsym $mod+8                 workspace $w8
bindsym $mod+9                 workspace $w9
bindsym $mod+0                 workspace $w0
bindsym $mod+bracketleft       workspace $wE
bindsym $mod+bracketright      workspace $wC
bindsym $mod+backslash         workspace $wP

# move focused container to workspace
bindsym $mod+Shift+1                 move container to workspace $w1
bindsym $mod+Shift+2                 move container to workspace $w2
bindsym $mod+Shift+3                 move container to workspace $w3
bindsym $mod+Shift+4                 move container to workspace $w4
bindsym $mod+Shift+5                 move container to workspace $w5
bindsym $mod+Shift+6                 move container to workspace $w6
bindsym $mod+Shift+7                 move container to workspace $w7
bindsym $mod+Shift+8                 move container to workspace $w8
bindsym $mod+Shift+9                 move container to workspace $w9
bindsym $mod+Shift+0                 move container to workspace $w0
bindsym $mod+Shift+bracketleft       move container to workspace $wE
bindsym $mod+Shift+bracketright      move container to workspace $wC
bindsym $mod+Shift+backslash         move container to workspace $wP

# switch to prev/next and back-and-forth
bindsym $mod+n workspace prev_on_output
bindsym $mod+m workspace next_on_output
bindsym $mod+x workspace back_and_forth

# move focused container to prev/next and back-and-forth
bindsym $mod+Shift+n move container to workspace prev_on_output
bindsym $mod+Shift+m move container to workspace next_on_output
bindsym $mod+Shift+x move container to workspace back_and_forth



# Outputs

# move focus to left/right
bindsym $mod+F7 focus output left
bindsym $mod+F8 focus output right

# move focused container to left/right
bindsym $mod+Shift+F7 move container to output left
bindsym $mod+Shift+F8 move container to output right

# move focused workspace to left/right
bindsym $mod+Shift+Mod1+F7 move workspace to output left
bindsym $mod+Shift+Mod1+F8 move workspace to output right



# Audio

# media prev/next/pause
bindsym $mod+Control+Mod1+comma  exec --no-startup-id playerctl previous
bindsym $mod+Control+Mod1+period exec --no-startup-id playerctl next
bindsym $mod+Control+Mod1+slash  exec --no-startup-id playerctl play-pause
bindsym $mod+Control+comma  exec --no-startup-id cmus-remote -r
bindsym $mod+Control+period exec --no-startup-id cmus-remote -n
bindsym $mod+Control+slash  exec --no-startup-id cmus-remote -u

# audio up/down/mute
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q -D pulse set Master 5%+ unmute; exec pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q -D pulse set Master 5%- unmute; exec pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute        exec --no-startup-id amixer -q -D pulse set Master toggle;     exec pkill -RTMIN+1 i3blocks
bindsym $mod+Control+F12     exec --no-startup-id amixer -q -D pulse set Master 5%+ unmute; exec pkill -RTMIN+1 i3blocks
bindsym $mod+Control+F11     exec --no-startup-id amixer -q -D pulse set Master 5%- unmute; exec pkill -RTMIN+1 i3blocks
bindsym $mod+Control+F10     exec --no-startup-id amixer -q -D pulse set Master toggle;     exec pkill -RTMIN+1 i3blocks

# start at 50% unless muted
exec --no-startup-id amixer -q -D pulse set Master 50%; exec pkill -RTMIN+1 i3blocks



# Programs

# start a terminal
bindsym $mod+Return exec urxvt
bindsym $mod+Shift+Return exec urxvt -name "floating-urxvt"
for_window [instance="floating-urxvt$"] floating enable,\
    exec --no-startup-id "xdotool getwindowfocus set_window --classname urxvt --name urxvt"

# rofi
set $rofi_args '-i'
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop --dmenu='rofi -dmenu $rofi_args -p "run:"'
bindsym $mod+Shift+d exec --no-startup-id rofi -show run $rofi_args

# quick launcher
mode "launch" {
        bindsym a exec --no-startup-id ~/.i3/bin/autorandr-rofi; mode "default"
        bindsym c exec --no-startup-id ~/.i3/bin/compton-mode; mode "default"
        bindsym f exec --no-startup-id firefox; mode "default"
        bindsym g exec --no-startup-id google-chrome; mode "default"
        bindsym Shift+g exec --no-startup-id google-chrome-unstable; mode "default"
        bindsym h exec --no-startup-id urxvt -e htop; mode "default"
        bindsym n exec --no-startup-id pcmanfm; mode "default"
        bindsym k exec --no-startup-id ~/.i3/bin/textbooks; mode "default"
        bindsym Shift+k exec --no-startup-id ~/.i3/bin/textbooks all; mode "default"
        bindsym r exec --no-startup-id urxvt -e ranger; mode "default"
        bindsym s exec --no-startup-id spotify; mode "default"
        bindsym t exec --no-startup-id thunderbird; mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+b mode "launch"

# scrot
set $scrot screenshot [win | full | select] (Shift for delay)
set $scrot_fmt '%Y%m%d-%H%M%S_$wx$h.png'
set $scrot_mv 'mv $f ~/Pictures/scrot/'
set $scrot_del '-d 5'
mode "$scrot" {
        bindsym           w exec --no-startup-id scrot -u -e $scrot_mv $scrot_fmt; mode "default"
        bindsym           f exec --no-startup-id scrot    -e $scrot_mv $scrot_fmt; mode "default"
        bindsym --release s exec --no-startup-id scrot -s -e $scrot_mv $scrot_fmt; mode "default"
        bindsym           Shift+w exec --no-startup-id scrot -u -e $scrot_mv $scrot_del $scrot_fmt; mode "default"
        bindsym           Shift+f exec --no-startup-id scrot    -e $scrot_mv $scrot_del $scrot_fmt; mode "default"
        bindsym --release Shift+s exec --no-startup-id scrot -s -e $scrot_mv $scrot_del $scrot_fmt; mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Print mode "$scrot"



# i3bar
bar {
        status_command i3blocks -c ~/.i3/i3blocks/config
        position top
        font pango:Roboto Mono, FontAwesome 11
        separator_symbol " ❱ "
        strip_workspace_numbers yes
        colors {
                background #2b303b
                statusline #eff1f5
                separator #4f5b66

                focused_workspace #2b303b #2b303b #eff1f5
                inactive_workspace #2b303b #2b303b #65737e
                urgent_workspace #2b303b #2b303b #bf616a
        }
}



exec --no-startup-id nm-applet
exec --no-startup-id xrdb -load ~/.Xresources
# Per-machine local config
exec_always --no-startup-id ~/.i3/local.sh

