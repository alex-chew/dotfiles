#!/usr/bin/env bash

source $(dirname $0)/_colors

if [[ "$(cat /sys/class/net/eth0/operstate)" != "up" ]]; then
  # full text
  echo "ðŸ–§   down"
  # short text
  echo
  # color
  echo ${base03}

else
  # full text
  echo  "ðŸ–§   $(ip addr show eth0 | awk '/inet / { print $2 }' | cut -d \/ -f 1)"
  # short text
  echo
  # color
  echo ${base07}

fi

