#!/usr/bin/env bash
source $(dirname $0)/_colors

# full text
perc=$(free -m | awk '/^Mem/ { printf "%.0f", (1 - $7/$2) * 100 }')
echo "$perc"

# short text
echo

# color
if (( perc >= 90 )); then
  echo ${base08}
elif (( perc >= 70 )); then
  echo ${base09}
elif (( perc >= 50 )); then
  echo ${base0A}
else
  echo ${base07}
fi

