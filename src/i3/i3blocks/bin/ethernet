#!/usr/bin/env bash

conn=$(nmcli -f CONNECTION,TYPE,STATE -t dev \
    | awk -F: '$2 == "ethernet" && $3 == "connected" { print $1 }')
if [[ -n "$conn" ]]; then
  # full text, short text, color
  echo "$conn"
  echo
  echo "{{ i3.fg }}"
else
  # full text, short text, color
  echo "--"
  echo
  echo "{{ i3.fg_inactive }}"
fi

